  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./dist",
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}